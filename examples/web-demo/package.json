{
  "name": "bresenham-lighting-engine-web-demo",
  "version": "0.1.0",
  "description": "Web demo for the Bresenham Lighting Engine",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --hot server.js",
    "build": "wasm-pack build --target web --out-dir pkg --release ../../",
    "serve": "bun run server.js",
    "rebuild": "npm run build && npm run dev",
    "watch": "bun run watch.js",
    "dev:full": "bun run index.js"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "engines": {
    "node": ">=18"
  }
}
